{% extends '::base_app.html.twig' %} 

{% block stylesheets %} 
    {{ parent() }}
{% endblock %} 

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-4 col-md-offset-4">
                <div class="login-panel panel panel-primary">
                    <div class="panel-heading">
                        <h3 class="panel-title text-center">Login to RTH POST </h3>
                    </div>
                    <div class="panel-body">
                        <form role="form" action="{{ path('fos_user_security_check') }}" method="post">
                            <input type="hidden" name="_csrf_token" value="{{ csrf_token }}" />
                            <fieldset>
                                {% if error %}
                                <div class="form-group">
                                    <p class="text-danger">Wrong user name or password</p>
                                </div>
                                {% endif %}
                                
                                <div class="input-group form-group">
                                    <div class="input-group-addon"><span class="glyphicon glyphicon-user"></span></div>
                                        <input class="form-control" required size="20" placeholder="User" name="_username" type="text" value="{{ last_username }}" autofocus>
                                </div>                                
                                <div class="input-group form-group">
                                    <div class="input-group-addon"><span class="fa fa-key"></span></div>
                                    <input class="form-control" required size="20" placeholder="Password" name="_password" type="password" value="">
                                </div>
                                <div class="checkbox">
                                    <label>
                                        <input name="_remember_me" type="checkbox" value="Remember Me">Keep session active
                                    </label>
                                </div>
                                <!-- Change this to a button or input when using this as a form -->
                                <button type="submit" class="btn btn-lg btn-success btn-block">Login <span class="fa fa-sign-in"></span></button>
                            </fieldset>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %} 